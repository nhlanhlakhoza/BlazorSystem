@page "/tasks"
@using Microsoft.AspNetCore.Components.Forms
@inject IJSRuntime JSRuntime
@using BlazorBootstrap

@rendermode InteractiveServer

<PageTitle>Task Management - Inspection Pro</PageTitle>

<div class="tasks-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-tasks"></i> Task Management</h1>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <button class="action-btn add" @onclick="ShowAddTaskModal">
            <i class="fas fa-plus-circle"></i>
            Add New Task
        </button>
        <button class="action-btn refresh" id="refreshBtn" @onclick="RefreshData">
            <i class="fas fa-sync-alt"></i>
            Refresh Data
        </button>
        <button class="action-btn export" @onclick="ExportTasks">
            <i class="fas fa-file-export"></i>
            Export Tasks
        </button>
    </div>

    <!-- Search and Filters -->
    <div class="search-section">
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" @bind="SearchTerm" @bind:event="oninput" placeholder="Search tasks by title, description, or agent..." />
        </div>
        <div class="filter-group">
            <select class="filter-select" @bind="StatusFilter">
                <option value="">All Status</option>
                <option value="pending">Pending</option>
                <option value="in-progress">In Progress</option>
                <option value="completed">Completed</option>
                <option value="overdue">Overdue</option>
            </select>
            <select class="filter-select" @bind="PriorityFilter">
                <option value="">All Priorities</option>
                <option value="high">High</option>
                <option value="medium">Medium</option>
                <option value="low">Low</option>
            </select>
            <select class="filter-select" @bind="AgentFilter">
                <option value="">All Agents</option>
                @foreach (var agent in Agents)
                {
                    <option value="@agent.Id">@agent.Name</option>
                }
            </select>
        </div>
    </div>

    <!-- Tasks Table -->
    <div class="tasks-table-container">
        <div class="table-header">
            <h2><i class="fas fa-list-check"></i> All Tasks</h2>
            <div class="table-actions">
                <span>@FilteredTasks.Count tasks</span>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Task</th>
                    <th>Assigned Agent</th>
                    <th>Due Date</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in FilteredTasks)
                {
                    var agent = Agents.FirstOrDefault(a => a.Id == task.AgentId);
                    <tr>
                        <td>
                            <div class="task-info">
                                <div class="task-title">@task.Title</div>
                                <div class="task-description">@task.Description</div>
                            </div>
                        </td>
                        <td>
                            <div class="agent-info">
                                <div class="agent-avatar">@agent?.Avatar</div>
                                <div class="agent-name">@agent?.Name</div>
                            </div>
                        </td>
                        <td>@FormatDate(task.DueDate)</td>
                        <td>
                            <span class="priority-badge priority-@task.Priority.ToLower()">
                                @task.Priority.ToUpper()
                            </span>
                        </td>
                        <td>
                            <select class="status-select" @onchange='@(e => UpdateTaskStatus(task.Id, e.Value?.ToString() ?? "pending"))'>
                                <option value="pending" selected=@(task.Status == "pending")>Pending</option>
                                <option value="in-progress" selected=@(task.Status == "in-progress")>In Progress</option>
                                <option value="completed" selected=@(task.Status == "completed")>Completed</option>
                                <option value="overdue" selected=@(task.Status == "overdue")>Overdue</option>
                            </select>
                        </td>
                        <td>
                            <div class="action-cell">
                                <button class="icon-btn edit-btn" @onclick="() => EditTask(task.Id)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="icon-btn delete-btn" @onclick="() => DeleteTask(task.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit Task Modal -->
@if (ShowModal)
{
    <div class="modal show">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@(EditingTask ? "Edit Task" : "Add New Task")</h3>
                <button class="close-btn" @onclick="CloseModal">&times;</button>
            </div>
            <EditForm Model="@CurrentTask" OnValidSubmit="SaveTask">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="taskTitle">Task Title *</label>
                    <InputText id="taskTitle" @bind-Value="@CurrentTask.Title" class="form-control" />
                    <ValidationMessage For="@(() => CurrentTask.Title)" />
                </div>
                <div class="form-group">
                    <label for="taskDescription">Description</label>
                    <InputTextArea id="taskDescription" @bind-Value="@CurrentTask.Description" class="form-control" />
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="taskAgent">Assign to Agent *</label>
                        <InputSelect id="taskAgent" @bind-Value="@CurrentTask.AgentId" class="form-control">
                            <option value="">Select Agent</option>
                            @foreach (var agent in Agents)
                            {
                                <option value="@agent.Id">@agent.Name</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => CurrentTask.AgentId)" />
                    </div>
                    <div class="form-group">
                        <label for="taskDueDate">Due Date *</label>
                        <InputDate id="taskDueDate" @bind-Value="@CurrentTask.DueDate" class="form-control" />
                        <ValidationMessage For="@(() => CurrentTask.DueDate)" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="taskPriority">Priority *</label>
                        <InputSelect id="taskPriority" @bind-Value="@CurrentTask.Priority" class="form-control">
                            <option value="">Select Priority</option>
                            <option value="high">High</option>
                            <option value="medium">Medium</option>
                            <option value="low">Low</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => CurrentTask.Priority)" />
                    </div>
                    <div class="form-group">
                        <label for="taskStatus">Status *</label>
                        <InputSelect id="taskStatus" @bind-Value="@CurrentTask.Status" class="form-control">
                            <option value="pending">Pending</option>
                            <option value="in-progress">In Progress</option>
                            <option value="completed">Completed</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => CurrentTask.Status)" />
                    </div>
                </div>
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Task</button>
                </div>
            </EditForm>
        </div>
    </div>
}

<!-- Loading Indicator -->
@if (IsLoading)
{
    <div class="loading-overlay">
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
            <p>@LoadingMessage</p>
        </div>
    </div>
}

@code {
    private List<TaskItem> Tasks = new();
    private List<TaskItem> FilteredTasks = new();
    private List<Agent> Agents = new();
    private TaskItem CurrentTask = new();
    private bool ShowModal = false;
    private bool EditingTask = false;
    private bool IsLoading = false;
    private string LoadingMessage = "";
    private string searchTerm = "";
    private string statusFilter = "";
    private string priorityFilter = "";
    private string agentFilter = "";
    private IJSObjectReference? taskModule;

    // Properties with getters/setters to trigger filtering
    private string SearchTerm
    {
        get => searchTerm;
        set
        {
            searchTerm = value;
            FilterTasks();
        }
    }

    private string StatusFilter
    {
        get => statusFilter;
        set
        {
            statusFilter = value;
            FilterTasks();
        }
    }

    private string PriorityFilter
    {
        get => priorityFilter;
        set
        {
            priorityFilter = value;
            FilterTasks();
        }
    }

    private string AgentFilter
    {
        get => agentFilter;
        set
        {
            agentFilter = value;
            FilterTasks();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        LoadSampleData();
        FilterTasks();

        // Load the JavaScript module
        try
        {
            taskModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./Pages/TaskManagement.razor.js");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load JS module: {ex.Message}");
        }
    }

    private void LoadSampleData()
    {
        // Sample agents
        Agents = new List<Agent>
        {
