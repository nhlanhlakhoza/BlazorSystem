            new Agent { Id = 4, Name = "Robert Wilson", Avatar = "RW" },
            new Agent { Id = 5, Name = "Lisa Martinez", Avatar = "LM" }
        };

        // Sample tasks
        Tasks = new List<TaskItem>
        {
            new TaskItem
            {
                Id = 1,
                Title = "Safety Inspection - Building A",
                Description = "Complete safety inspection for Building A including fire exits and equipment",
                AgentId = 1,
                DueDate = new DateTime(2024, 2, 20),
                Priority = "high",
                Status = "pending",
                CreatedAt = new DateTime(2024, 2, 10)
            },
            new TaskItem
            {
                Id = 2,
                Title = "Electrical System Check",
                Description = "Inspect electrical panels and wiring in the main facility",
                AgentId = 2,
                DueDate = new DateTime(2024, 2, 18),
                Priority = "high",
                Status = "in-progress",
                CreatedAt = new DateTime(2024, 2, 8)
            },
            new TaskItem
            {
                Id = 3,
                Title = "Fire Safety Audit",
                Description = "Quarterly fire safety audit for all buildings",
                AgentId = 3,
                DueDate = new DateTime(2024, 2, 25),
