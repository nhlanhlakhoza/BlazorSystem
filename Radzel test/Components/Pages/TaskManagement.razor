@page "/tasks"
@using Microsoft.AspNetCore.Components.Forms
@inject IJSRuntime JSRuntime
@using BlazorBootstrap
@using Radzel_test.Components.Services
@using static System.Net.WebRequestMethods
@inject HttpClient Http
@rendermode InteractiveServer
@inject UserStateService UserStateService
<PageTitle>Task Management - Inspection Pro</PageTitle>

<div class="tasks-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-tasks"></i> Task Management</h1>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <button class="action-btn add" @onclick="ShowAddTaskModal">
            <i class="fas fa-plus-circle"></i>
            Add New Task
        </button>
        <button class="action-btn refresh" id="refreshBtn" @onclick="RefreshData">
            <i class="fas fa-sync-alt"></i>
            Refresh Data
        </button>
        
    </div>

    <!-- Search and Filters -->
    <div class="search-section">
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" @bind="SearchTerm" @bind:event="oninput" placeholder="Search tasks by title, description, or agent..." />
        </div>
        <div class="filter-group">
            <select class="filter-select" @bind="StatusFilter">
                <option value="">All Status</option>
                <option value="pending">Pending</option>
                <option value="in-progress">In Progress</option>
                <option value="completed">Completed</option>
                <option value="overdue">Overdue</option>
            </select>
            <select class="filter-select" @bind="PriorityFilter">
                <option value="">All Priorities</option>
                <option value="high">High</option>
                <option value="medium">Medium</option>
                <option value="low">Low</option>
            </select>
            <select class="filter-select" @bind="AgentFilter">
                <option value="">All Agents</option>
                @foreach (var agent in Agents)
                {
                    <option value="@agent.Id">@agent.Name</option>
                }
            </select>
        </div>
    </div>

    <!-- Tasks Table -->
    <div class="tasks-table-container">
        <div class="table-header">
            <h2><i class="fas fa-list-check"></i> All Tasks</h2>
            <div class="table-actions">
                <span>@FilteredTasks.Count tasks</span>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Task</th>
                    <th>Assigned Agent</th>
                    <th>Due Date</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in FilteredTasks)
                {
                    var agent = Agents.FirstOrDefault(a => a.Id == task.AgentId);
                    <tr>
                        <td>
                            <div class="task-info">
                                <div class="task-title">@task.Title</div>
                                <div class="task-description">@task.Description</div>
                            </div>
                        </td>
                        <td>
                            <div class="agent-info">
                                <div class="agent-avatar">@agent?.Avatar</div>
                                <div class="agent-name">@agent?.Name</div>
                            </div>
                        </td>
                        <td>@FormatDate(task.DueDate)</td>
                        <td>
                            <span class="priority-badge priority-@task.Priority.ToLower()">
                                @task.Priority.ToUpper()
                            </span>
                        </td>
                        <td>
                            <select class="status-select" @onchange='@(e => UpdateTaskStatus(task.Id, e.Value?.ToString() ?? "pending"))'>
                                <option value="pending" selected=@(task.Status == "pending")>Pending</option>
                                <option value="in-progress" selected=@(task.Status == "in-progress")>In Progress</option>
                                <option value="completed" selected=@(task.Status == "completed")>Completed</option>
                                <option value="overdue" selected=@(task.Status == "overdue")>Overdue</option>
                            </select>
                        </td>
                        <td>
                            <div class="action-cell">
                                <button class="icon-btn edit-btn" @onclick="() => EditTask(task.Id)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="icon-btn delete-btn" @onclick="() => DeleteTask(task.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                                @if (task.Status == "completed")
                                {
                                    <button class="icon-btn view-btn" @onclick="() => ViewTask(task.Id)">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@if (ShowViewModal)
{
    <div class="modal show">
        <div class="modal-content view-modal">
            <div class="modal-header">
                <h3>Task Details</h3>
                <button class="close-btn" @onclick="CloseViewModal">&times;</button>
            </div>

            <div class="modal-body">
                <div class="task-info-section">
                    <p><strong>Title:</strong> @ViewTaskItem.Title</p>
                    <p><strong>Description:</strong> @ViewTaskItem.Description</p>
                    <p><strong>Assigned Agent:</strong> @Agents.FirstOrDefault(a => a.Id == ViewTaskItem.AgentId)?.Name</p>
                    <p><strong>Due Date:</strong> @FormatDate(ViewTaskItem.DueDate)</p>
                    <p><strong>Priority:</strong> @ViewTaskItem.Priority</p>
                </div>

                <hr />

                <!-- Tabs for PDFs and Images -->
                <div class="tabs">
                    <button class="tab-button @(ActiveTab == "pdf" ? "active" : "")"
                            @onclick='() => SwitchTab("pdf")'>
                        Uploaded PDFs (@ViewTaskFiles.Count)
                    </button>
                    <button class="tab-button @(ActiveTab == "images" ? "active" : "")"
                            @onclick='() => SwitchTab("images")'>
                        Uploaded Pictures (@ViewTaskImages.Count)
                    </button>
                </div>



                <div class="tab-content">
                    @if (ActiveTab == "pdf")
                    {
                        @if (ViewTaskFiles.Any())
                        {
                            @foreach (var file in ViewTaskFiles)
                            {
                                <div class="pdf-preview">
                                    <p>@file.FileName</p>
                                    <iframe src="@file.Url" width="100%" height="400px"></iframe>
                                </div>
                            }
                        }
                        else
                        {
                            <p>No PDFs uploaded.</p>
                        }
                    }
                    else if (ActiveTab == "images")
                    {
                        @if (ViewTaskImages.Any())
                        {
                            <div class="image-gallery">
                                @foreach (var img in ViewTaskImages)
                                {
                                    <img src="@img.Url" alt="@img.FileName" class="uploaded-image" />
                                }
                            </div>
                        }
                        else
                        {
                            <p>No images uploaded.</p>
                        }
                    }
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="CloseViewModal">Close</button>
            </div>
        </div>
    </div>
}


<!-- Add/Edit Task Modal -->
@if (ShowModal)
{
    <div class="modal show">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@(EditingTask ? "Edit Task" : "Add New Task")</h3>
                <button class="close-btn" @onclick="CloseModal">&times;</button>
            </div>
            <EditForm Model="@CurrentTask" OnValidSubmit="SaveTask">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="taskTitle">Task Title *</label>
                    <InputText id="taskTitle" @bind-Value="@CurrentTask.Title" class="form-control" />
                    <ValidationMessage For="@(() => CurrentTask.Title)" />
                </div>
                <div class="form-group">
                    <label for="taskDescription">Description</label>
                    <InputTextArea id="taskDescription" @bind-Value="@CurrentTask.Description" class="form-control" />
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="taskAgent">Assign to Agent *</label>
                        <InputSelect id="taskAgent" @bind-Value="@CurrentTask.AgentId" class="form-control">
                            <option value="">Select Agent</option>
                            @foreach (var agent in Agents)
                            {
                                <option value="@agent.Id">@agent.Name</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => CurrentTask.AgentId)" />
                    </div>
                    <div class="form-group">
                        <label for="taskDueDate">Due Date *</label>
                        <InputDate id="taskDueDate" @bind-Value="@CurrentTask.DueDate" class="form-control" />
                        <ValidationMessage For="@(() => CurrentTask.DueDate)" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="taskPriority">Priority *</label>
                        <InputSelect id="taskPriority" @bind-Value="@CurrentTask.Priority" class="form-control">
                            <option value="">Select Priority</option>
                            <option value="high">High</option>
                            <option value="medium">Medium</option>
                            <option value="low">Low</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => CurrentTask.Priority)" />
                    </div>
                  
                </div>
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Task</button>
                </div>
            </EditForm>
            <br />
            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="alert alert-success text-center">@SuccessMessage</div>
            }

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger text-center">@ErrorMessage</div>
            }
        </div>
    </div>
}

<!-- Loading Indicator -->
@if (IsLoading)
{
    <div class="loading-overlay">
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
            <p>@LoadingMessage</p>
        </div>
    </div>
}

@code {
    private List<TaskItem> Tasks = new();
    private List<TaskItem> FilteredTasks = new();
    private List<Agent> Agents = new();
    private TaskItem CurrentTask = new();
    private TaskItem CreateTaskRequest = new();
    private bool ShowModal = false;
    private bool EditingTask = false;
    private bool IsLoading = false;
    private string LoadingMessage = "";
    private string searchTerm = "";
    private string statusFilter = "";
    private string priorityFilter = "";
    private string agentFilter = "";
    private IJSObjectReference? taskModule;
    private bool ShowViewModal = false;
    private TaskItem ViewTaskItem = new();
    private List<FileItem> ViewTaskFiles = new();
    private List<FileItem> ViewTaskImages = new();
    private string ErrorMessage = "";

    private string SuccessMessage = "";
    private string SearchTerm
    {
        get => searchTerm;
        set
        {
            searchTerm = value;
            FilterTasks();
        }
    }

    private string StatusFilter
    {
        get => statusFilter;
        set
        {
            statusFilter = value;
            FilterTasks();
        }
    }

    private string PriorityFilter
    {
        get => priorityFilter;
        set
        {
            priorityFilter = value;
            FilterTasks();
        }
    }

    private string AgentFilter
    {
        get => agentFilter;
        set
        {
            agentFilter = value;
            FilterTasks();
        }
    }
    private string ActiveTab = "pdf"; 

    private void SwitchTab(string tab)
    {
        ActiveTab = tab;
    }
   

    protected override async Task OnInitializedAsync()
    {
        LoadSampleData();
        FilterTasks();

        // Load the JavaScript module
        try
        {
            taskModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./Pages/TaskManagement.razor.js");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load JS module: {ex.Message}");
        }
    }

    private async Task LoadSampleData()
    {
        IsLoading = true; 
        StateHasChanged(); 
        try
        {
            
            Agents = new List<Agent>();
            Tasks = new List<TaskItem>();

           
            var inspectors = await Http.GetFromJsonAsync<List<Agent>>("https://localhost:7272/api/users/inspectors");
            if (inspectors != null)
            {
                Agents = inspectors.Select(i => new Agent
                {
                    Id = i.Id,
                    FullName = $"{i.FullName} {i.LastName}",
                    Avatar = $"{(string.IsNullOrEmpty(i.FullName) ? "" : i.FullName[0].ToString())}" +
                             $"{(string.IsNullOrEmpty(i.LastName) ? "" : i.LastName[0].ToString())}".ToUpper()
                }).ToList();
            }

            
            var tasksFromApi = await Http.GetFromJsonAsync<List<TaskItem>>("https://localhost:7272/api/Tasks/all");
            if (tasksFromApi != null)
            {
                Tasks = tasksFromApi.Select(t =>
                {
                    t.AgentId = Agents.Any(a => a.Id == t.AgentId) ? t.AgentId : Agents.FirstOrDefault()?.Id ?? t.AgentId;
                    return t;
                }).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error loading sample data: " + ex.Message);
        }
        finally
        {
            FilterTasks();
            IsLoading = false; 
            StateHasChanged(); 
        }
    }



    private void FilterTasks()
    {
        var filtered = Tasks.AsEnumerable();

        if (!string.IsNullOrEmpty(SearchTerm))
        {
            filtered = filtered.Where(t =>
                t.Title.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                t.Description.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                Agents.Any(a => a.Id == t.AgentId && a.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase))
            );
        }

        if (!string.IsNullOrEmpty(StatusFilter))
        {
            filtered = filtered.Where(t => t.Status == StatusFilter);
        }

        if (!string.IsNullOrEmpty(PriorityFilter))
        {
            filtered = filtered.Where(t => t.Priority == PriorityFilter);
        }

        if (!string.IsNullOrEmpty(AgentFilter) && int.TryParse(AgentFilter, out int agentId))
        {
            filtered = filtered.Where(t => t.AgentId == agentId);
        }

        FilteredTasks = filtered.ToList();
        StateHasChanged();
    }

    private string FormatDate(DateTime date)
    {
        return date.ToString("MMM dd, yyyy");
    }

    private void ShowAddTaskModal()
    {
        CurrentTask = new TaskItem
        {
            DueDate = DateTime.Today.AddDays(1),
            Status = "pending",
            Priority = "medium"
        };
        EditingTask = false;
        ShowModal = true;
        StateHasChanged();
    }

    private void EditTask(int taskId)
    {
        var task = Tasks.FirstOrDefault(t => t.Id == taskId);
        if (task != null)
        {
            CurrentTask = new TaskItem
            {
                Id = task.Id,
                Title = task.Title,
                Description = task.Description,
                AgentId = task.AgentId,
                DueDate = task.DueDate,
                Priority = task.Priority,
                Status = task.Status,
                CreatedAt = task.CreatedAt
            };
            EditingTask = true;
            ShowModal = true;
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        ShowModal = false;
        CurrentTask = new TaskItem();
        StateHasChanged();
    }

    private async Task SaveTask()
    {
        // Convert UserId from UserStateService (Manager ID)
        if (!int.TryParse(UserStateService.UserId, out int userId))
        {
            ErrorMessage = "Invalid user session. Please login again.";
            return;
        }

        IsLoading = true;
        LoadingMessage = "Saving task...";
        StateHasChanged();

        try
        {
            await Task.Delay(500); //

            // Create DTO to send to API
            var dto = new CreateTaskDto
            {
                Title = CurrentTask.Title,
                Description = CurrentTask.Description,
                AgentId = CurrentTask.AgentId.ToString(),   
                AssignedBy = userId.ToString(),
                Priority = CurrentTask.Priority,
                DueDate = CurrentTask.DueDate
            };

           
            var response = await Http.PostAsJsonAsync("https://localhost:7272/api/Tasks/add", dto);

            if (response.IsSuccessStatusCode)
            {
                var savedTask = await response.Content.ReadFromJsonAsync<TaskItem>();

                if (savedTask != null)
                {
                   
                    if (EditingTask)
                    {
                        var index = Tasks.FindIndex(t => t.Id == CurrentTask.Id);
                        if (index >= 0)
                            Tasks[index] = savedTask;
                    }
                    else
                    {
                        Tasks.Add(savedTask);
                    }

                    FilterTasks();
                    
                }
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                ErrorMessage = $"API Error: {error}";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = "Unexpected error: " + ex.Message;
        }
        finally
        {
            IsLoading = false;
            SuccessMessage = "Task Created successfully!";
          
            StateHasChanged();
            await Task.Delay(3000);

            CloseModal();
        }
    }

  

    




    private async Task DeleteTask(int taskId)
    {
        var result = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this task?");
        if (result)
        {
            Tasks.RemoveAll(t => t.Id == taskId);
            FilterTasks();
            //await JSRuntime.InvokeVoidAsync("alert", "Task deleted successfully!");
        }
    }

    private void UpdateTaskStatus(int taskId, string? newStatus)
    {
        if (string.IsNullOrEmpty(newStatus)) return;

        var task = Tasks.FirstOrDefault(t => t.Id == taskId);
        if (task != null)
        {
            task.Status = newStatus;
            FilterTasks(); // Refresh the filtered list
            Console.WriteLine($"Task {taskId} status updated to {newStatus}");
        }
    }

    private async Task RefreshData()
    {
        IsLoading = true;
        LoadingMessage = "Refreshing data...";
        StateHasChanged();

        // Show refresh animation using JavaScript
        if (taskModule != null)
        {
            await taskModule.InvokeVoidAsync("showRefreshAnimation", "refreshBtn");
        }
        else
        {
            // Fallback: just wait without animation
            await Task.Delay(1000);
        }

        // Simulate data refresh by re-filtering
        FilterTasks();

        IsLoading = false;
        //await JSRuntime.InvokeVoidAsync("alert", "Data refreshed successfully!");
    }

    private async Task ExportTasks()
    {
        IsLoading = true;
        LoadingMessage = "Exporting tasks...";
        StateHasChanged();

        // Use JavaScript module for export if available
        if (taskModule != null)
        {
            await taskModule.InvokeVoidAsync("exportTasks");
        }
        else
        {
            // Fallback export functionality
            await Task.Delay(1000); // Simulate export process
            // await JSRuntime.InvokeVoidAsync("alert", "Tasks exported successfully! CSV file downloaded.");
        }

        IsLoading = false;
    }

    private void ViewTask(int taskId)
    {
        var task = Tasks.FirstOrDefault(t => t.Id == taskId);
        if (task != null)
        {
            ViewTaskItem = task;

            // Replace with your actual logic to get uploaded files/images for this task
            ViewTaskFiles = new List<FileItem>
        {
            new FileItem { FileName = "Report.pdf", Url = "/uploads/report.pdf", Type = "pdf" }
        };
            ViewTaskImages = new List<FileItem>
        {
            new FileItem { FileName = "Photo1.jpg", Url = "/uploads/photo1.jpg", Type = "image" },
            new FileItem { FileName = "Photo2.jpg", Url = "/uploads/photo2.jpg", Type = "image" }
        };

            ShowViewModal = true;
        }
    }

    private void CloseViewModal()
    {
        ShowViewModal = false;
        ViewTaskItem = new TaskItem();
        ViewTaskFiles.Clear();
        ViewTaskImages.Clear();
    }




    // Model Classes
    public class TaskItem
    {
        public int Id { get; set; }
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public int AgentId { get; set; }
        public DateTime DueDate { get; set; }
        public string Priority { get; set; } = string.Empty;
        public string Status { get; set; } = "pending";
        public DateTime CreatedAt { get; set; }
        public int AssignedBy { get; set; }
    }

    public class Agent
    {
        public int Id { get; set; }
        public string FullName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        // Computed property for full name
        public string Name => $"{FullName} {LastName}";
        public string Avatar { get; set; } = string.Empty;
    }
    public class FileItem
    {
        public string FileName { get; set; } = string.Empty;
        public string Url { get; set; } = string.Empty;
        public string Type { get; set; } = ""; // "image" or "pdf"
    }
    // DTO class to match backend
    public class CreateTaskDto
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public string AgentId { get; set; }
        public string AssignedBy { get; set; }
        public string Priority { get; set; } = string.Empty;
        public DateTime DueDate { get; set; }
    }


}
