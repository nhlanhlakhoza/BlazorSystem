@page "/users"
@using Microsoft.AspNetCore.Components.Forms
@inject IJSRuntime JSRuntime
@inject HttpClient Http

@rendermode InteractiveServer
<PageTitle>Users Management - Inspection Pro</PageTitle>

<div class="users-container">
    <!-- Page Header -->
    <div class="page-header">
        <h1><i class="fas fa-users"></i> Users Management</h1>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <button class="action-btn add" @onclick="ShowAddUserModal">
            <i class="fas fa-user-plus"></i>
            Add New User
        </button>
        <button class="action-btn export" @onclick="ExportUsers">
            <i class="fas fa-file-export"></i>
            Export Users
        </button>
        <button class="action-btn refresh" @onclick="RefreshData">
            <i class="fas fa-sync-alt"></i>
            Refresh Data
        </button>
    </div>

    <!-- Search and Filters -->
    <div class="search-section">
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" @bind="SearchTerm" @bind:event="oninput" placeholder="Search users by name, email, or role..." />
        </div>
        <div class="filter-group">
            <select class="filter-select" @bind="RoleFilter">
                <option value="">All Roles</option>
                <option value="admin">Administrator</option>
                <option value="inspector">Inspector</option>
                <option value="manager">Manager</option>
            </select>
            <select class="filter-select" @bind="StatusFilter">
                <option value="">All Status</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
        </div>
    </div>

    <!-- Users Table -->
    <div class="users-table-container">
        <div class="table-header">
            <h2><i class="fas fa-list"></i> All Users</h2>
            <div class="table-actions">
                <span>@FilteredUsers.Count users</span>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>User</th>
                    <th>Role</th>
                    <th>Department</th>
                    <th>Last Login</th>
                    <th>Status</th>
                    <th>Disable</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in FilteredUsers)
                {
                    <tr>
                        <td>
                            <div class="user-info">
                                <div class="user-avatar">@GetUserInitials(user.Name)</div>
                                <div class="user-details">
                                    <h4>@user.Name</h4>
                                    <div class="user-email">@user.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="role-badge role-@user.Role">
                                @GetRoleDisplayName(user.Role)
                            </span>
                        </td>
                        <td>@user.Department</td>
                        <td>@FormatDate(user.LastLogin)</td>
                        <td>
                            <span class="status-badge status-@user.Status">
                                @user.Status.ToUpper()
                            </span>
                        </td>
                        <td>
                            <label class="toggle-switch">
                                <input type="checkbox" checked="@(!user.Disabled)"
                                       @onchange="@((e) => ToggleUserStatus(user.Id, !(bool)e.Value))" />
                                <span class="slider"></span>
                            </label>
                        </td>
                        <td>
                            <div class="action-cell">
                                <button class="icon-btn edit-btn" @onclick="() => EditUser(user.Id)">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="icon-btn delete-btn" @onclick="() => DeleteUser(user.Id)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add/Edit User Modal -->
@if (ShowModal)
{
    <div class="modal show">
        <div class="modal-content">
            <div class="modal-header">
                <h3>@(EditingUser ? "Edit User" : "Add New User")</h3>
                <button class="close-btn" @onclick="CloseModal">&times;</button>
            </div>
            <EditForm Model="@CurrentUser" OnValidSubmit="@SaveUser">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="userName">Full Name *</label>
                    <InputText id="userName" @bind-Value="@CurrentUser.Name" class="form-control" />
                    <ValidationMessage For="@(() => CurrentUser.Name)" />
                </div>
                <div class="form-group">
                    <label for="userEmail">Email Address *</label>
                    <InputText id="userEmail" @bind-Value="@CurrentUser.Email" class="form-control" />
                    <ValidationMessage For="@(() => CurrentUser.Email)" />
                </div>
                <div class="form-group">
                    <label for="userRole">Role *</label>
                    <InputSelect id="userRole" @bind-Value="@CurrentUser.Role" class="form-control">
                        <option value="">Select Role</option>
                        <option value="admin">Administrator</option>
                        <option value="inspector">Inspector</option>
                        <option value="manager">Manager</option>
                    </InputSelect>
                    <ValidationMessage For="@(() => CurrentUser.Role)" />
                </div>
                <div class="form-group">
                    <label for="userDepartment">Department *</label>
                    <InputText id="userDepartment" @bind-Value="@CurrentUser.Department" class="form-control" />
                    <ValidationMessage For="@(() => CurrentUser.Department)" />
                </div>
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save User</button>
                </div>
            </EditForm>
        </div>
    </div>
}

<!-- Loading Indicator -->
@if (IsLoading)
{
    <div class="loading-overlay">
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
            <p>@LoadingMessage</p>
        </div>
    </div>
}

@code {
    private List<User> Users = new();
    private List<User> FilteredUsers = new();
    private User CurrentUser = new();
    private bool ShowModal = false;
    private bool EditingUser = false;
    private bool IsLoading = false;
    private string LoadingMessage = "";
    private string SearchTerm = "";
    private string RoleFilter = "";
    private string StatusFilter = "";

    protected override void OnInitialized()
    {
        LoadSampleData();
        FilterUsers();
    }

