                Status = "inactive",
                Disabled = true
            }
        };
    }

    private void FilterUsers()
    {
        var filtered = Users.AsEnumerable();

        if (!string.IsNullOrEmpty(SearchTerm))
        {
            filtered = filtered.Where(u =>
                u.Name.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                u.Email.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
                u.Department.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)
            );
        }

        if (!string.IsNullOrEmpty(RoleFilter))
        {
            filtered = filtered.Where(u => u.Role == RoleFilter);
        }

        if (!string.IsNullOrEmpty(StatusFilter))
        {
            filtered = filtered.Where(u => u.Status == StatusFilter);
        }

        FilteredUsers = filtered.ToList();
        StateHasChanged();
    }

    private string GetUserInitials(string name)
    {
        return string.Join("", name.Split(' ').Select(n => n[0]));
    }

    private string GetRoleDisplayName(string role)
    {
        return role switch
        {
            "admin" => "Administrator",
            "inspector" => "Inspector",
            "manager" => "Manager",
            _ => role
        };
    }

    private string FormatDate(DateTime date)
    {
        return date.ToString("MMM dd, yyyy");
    }

    private void ShowAddUserModal()
    {
        CurrentUser = new User
        {
            Status = "active",
            Disabled = false
        };
        EditingUser = false;
        ShowModal = true;
        StateHasChanged();
    }

    private void EditUser(int userId)
    {
        var user = Users.FirstOrDefault(u => u.Id == userId);
        if (user != null)
        {
            CurrentUser = new User
            {
                Id = user.Id,
                Name = user.Name,
                Email = user.Email,
                Role = user.Role,
                Department = user.Department,
                LastLogin = user.LastLogin,
                Status = user.Status,
                Disabled = user.Disabled
            };
            EditingUser = true;
            ShowModal = true;
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        ShowModal = false;
        CurrentUser = new User();
        StateHasChanged();
    }

    private async Task SaveUser()
    {
        try
        {
            IsLoading = true;
            LoadingMessage = EditingUser ? "Updating user..." : "Saving user...";
            StateHasChanged();

            // Send the user data to the API
            var response = await Http.PostAsJsonAsync("https://localhost:7272/api/users/create", CurrentUser);

            if (response.IsSuccessStatusCode)
            {
                // Optionally read the returned user or result
                var createdUser = await response.Content.ReadFromJsonAsync<User>();

                if (EditingUser)
                {
                    var existingUser = Users.FirstOrDefault(u => u.Id == createdUser.Id);
                    if (existingUser != null)
                    {
                        existingUser.Name = createdUser.Name;
                        existingUser.Email = createdUser.Email;
                        existingUser.Role = createdUser.Role;
                        existingUser.Department = createdUser.Department;
                        existingUser.LastLogin = createdUser.LastLogin;
                       
                    }
                }
                else
                {
                    Users.Add(createdUser);
                }
            }
            else
            {
                // Handle API errors
                var errorMessage = await response.Content.ReadAsStringAsync();
                Console.WriteLine("API Error: " + errorMessage);
            }
        }
        catch (Exception ex)
        {
            // Handle network or other errors
            Console.WriteLine("SaveUser error: " + ex.Message);
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

   


    private async Task DeleteUser(int userId)
    {
        var result = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this user?");
        if (result)
        {
            Users.RemoveAll(u => u.Id == userId);
            FilterUsers();
            await JSRuntime.InvokeVoidAsync("alert", "User deleted successfully!");
        }
    }

    private void ToggleUserStatus(int userId, bool isActive)
    {
        var user = Users.FirstOrDefault(u => u.Id == userId);
        if (user != null)
        {
            user.Disabled = !isActive;
            user.Status = isActive ? "active" : "inactive";
            StateHasChanged();
        }
    }

    private async Task ExportUsers()
    {
        IsLoading = true;
        LoadingMessage = "Exporting users...";
        StateHasChanged();

        await Task.Delay(1000); // Simulate export process

        IsLoading = false;
        await JSRuntime.InvokeVoidAsync("alert", "Users exported successfully!");
    }

    private async Task RefreshData()
    {
        IsLoading = true;
        LoadingMessage = "Refreshing data...";
        StateHasChanged();

        await Task.Delay(1000); // Simulate API call

        FilterUsers();
        IsLoading = false;
        await JSRuntime.InvokeVoidAsync("alert", "Data refreshed successfully!");
    }

    // Model Classes
    public class User
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Role { get; set; } = string.Empty;
        public string Department { get; set; } = string.Empty;
        public DateTime LastLogin { get; set; }
        public string Status { get; set; } = "active";
        public bool Disabled { get; set; }
    }

    
}
